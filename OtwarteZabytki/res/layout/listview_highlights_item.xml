<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/highlight_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/googlecard"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
	
	    <ImageView
			android:id="@+id/highlight_item_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		   	android:layout_gravity="center_vertical"
		   	android:paddingTop="10dp"
			android:paddingBottom="10dp" 
			android:src="@drawable/ic_default_list"
			android:contentDescription="@string/content_search_item_thumbnail"
			/>
	 
		<RelativeLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:paddingTop="10dp"
		    android:paddingBottom="10dp"
		   	android:paddingLeft="10dp"
		    android:layout_weight="1"
		    >
	 
		    <TextView android:id="@+id/highlight_item_title"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:singleLine="true"
		         android:textStyle="bold"
		         />
	 
		    <TextView android:id="@+id/highlight_item_desc"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_below="@id/highlight_item_title"
		         />
	 
		    <TextView android:id="@+id/highlight_item_sent"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentBottom="true"
		         android:layout_alignParentRight="true"
		         android:text="@string/home_highlight_item_notsent"
		         android:textColor="@color/mill_background"
		         />
		    
    	</RelativeLayout>
</LinearLayout>
